
ICON_FILES = $(wildcard electron/build/icons/*.png)
ICON_SIZES = $(patsubst electron/build/icons/%.png,%,$(ICON_FILES))

all:
	npm install
	npm run build
	./node_modules/.bin/build -l --dir

install:
	install -dm755 /app/bin
	cp -ar electron/dist/linux-unpacked/* /app/bin/
	for size in $(ICON_SIZES) ; do \
		install -dm755 /app/share/icons/hicolor/$${size}/apps/ ; \
		install -Dm644 electron/build/icons/$${size}.png \
			/app/share/icons/hicolor/$${size}/apps/im.riot.Riot.png ; \
	done
	install -dm755 /app/share/applications
	install -Dm644 im.riot.Riot.desktop /app/share/applications

.PHONY: install all
